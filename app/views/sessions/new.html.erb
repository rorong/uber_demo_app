<div class="login-form">
  <h2 class="text-center">Log in</h2>
  <%= simple_form_for :session, url: sign_in_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.input :email, label: false, class: "form-control login_field", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.input :password, label: false, class: "form-control login_field", placeholder: "Password" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Login', class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>

